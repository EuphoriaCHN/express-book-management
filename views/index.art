<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>图书管理系统</title>
    <link rel="stylesheet" href="/www/css/index.css" />
</head>
<body>
<div class="title">图书管理系统 <a href="/toaddbook">添加图书</a></div>
<div class="content">
    <table cellpadding="0" cellspacing="0">
        <thead>
        <tr>
            <th>编号</th>
            <th>名称</th>
            <th>作者</th>
            <th>分类</th>
            <th>描述</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {{each bookList}}
        <tr>
            <td>{{$value.id}}</td>
            <td>{{$value.name}}</td>
            <td>{{$value.author}}</td>
            <td>{{$value.category}}</td>
            <td>{{$value.desc}}</td>
            <td><a href="/tomodifybook?id={{$value.id}}">编辑</a>|<a href="/deletebook?id={{$value.id}}">删除</a></td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>
</body>
</html>
